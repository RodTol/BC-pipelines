pipeline {
    agent { 
        node {
            label 'docker'
            }
      }
    triggers {
        pollSCM 'H * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                echo "doing build stuff.."
                echo "UPDATE extra"
                pwd
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                echo "doing test stuff.."
                pwd
                ls -lrt
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                cd my-first-pipeline
                #bash telegram_bot.sh
                '''
            }
        }
    }
}
